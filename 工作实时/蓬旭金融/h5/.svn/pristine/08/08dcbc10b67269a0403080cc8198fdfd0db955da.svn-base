@-webkit-keyframes move{
   0%{
     -webkit-transform:translateY(10px);
   }
   100%{
     -webkit-transform:translateY(-10px);
   }
}
@keyframes move{
   0%{
     transform:translateY(10px);
   }
   100%{
     transform:translateY(-10px);
   }
}

body,input,form,p,pre,h1,h2,h3,h4,h5,h6,ul,li{margin:0;padding:0;}
h3{font-weight:normal;}
body{font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;-webkit-user-select:none;
font-size:0.3rem;color:#989898}
html,body{width:100%;height:100%;overflow:hidden;}
#slider{width:100%;height:100%;overflow:hidden;position:relative;}
ul,li{list-style:none;}
a{text-decoration:none;-webkit-tap-highlight-color:rgba(0,0,0,0);}
input[type="button"],button,a{-webkit-tap-highlight-color:rgba(0,0,0,0);}
img{border:0;display:block;}
#list{
  position:absolute;
  top:0;
}
#list li{
  position:relative;
}
#list li:nth-of-type(1) img{
 width:100%;
 height:100%;
}
h3{
    text-align: center;
    font-size:0.5rem;
    line-height:1rem;
    color: #ff971b;
}
p{
  text-indent:0.2rem;
  padding:0 0.4rem;
  line-height:0.5rem;
}
#list li .footer{
    position: absolute;
    left: 0;
    bottom: -0.3rem;
    width: 100%;
    height: 2.1rem;
    background: url(../img/footer.png) no-repeat;
    background-size: cover;
}
#list li .footer a{
    text-align: center;
    display: block;
    width: 4.2rem;
    height: 0.8rem;
    line-height: 0.8rem;
    background: #fff;
    margin: 0.7rem auto;
    color: #ff971b;
    border-radius: 0.6rem;
}
#next{
  position:absolute;
  bottom: 0.75rem;
  left:50%;
  margin-left:-0.2rem;
  width:0.4rem;
  height:0.29rem;
  background:url(../img/fonnt.png) no-repeat;
  background-size:cover;
  -webkit-animation: move 1.5s infinite linear alternate;
  animation: move 1.5s infinite linear alternate;
}



