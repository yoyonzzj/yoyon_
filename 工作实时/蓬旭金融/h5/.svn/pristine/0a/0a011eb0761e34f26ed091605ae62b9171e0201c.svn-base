body,h1,h2,h3,h4,h5,h6,hr,p,blockquote,dl,dt,dd,ul,ol,li,pre,form,fieldset,legend,button,input,textarea,th,td,div{margin:0;padding:0;}
body,button,input,select,textarea{font-family: "微软雅黑","MicroSoft YaHei","Arial Narrow","HELVETICA"; font-size:14px; padding:0; margin:0; color:#666;}
table{border-collapse:collapse;border-spacing:0;}
ul,li{ margin:0px; padding:0px; list-style:none; }
img{border:none;}
h1,h2,h3,h4,h5,h6,p{ margin:0; padding:0;}
.clear{ clear:both; margin:0; padding:0;}
a{text-decoration:none; color:#666;}
html{overflow-x:hidden;-webkit-text-size-adjust:none;}

.czz-container{width:1920px;height:auto;background:#f4f4f4;margin:0 auto}
.czz-conter{width:1200px;height:auto;margin:0 auto;}

/*分页*/
.czz-pagination{height:30px;}
.czz-pagination li{float:left;border-radius: 4px;background-color: #ececec;border: solid 1px #ececec;width:40px;margin-right:16px;text-align: center;line-height: 30px;font-size: 14px;letter-spacing: 0.4px}
.czz-pagination li a{color: #666666;text-decoration: none;cursor: pointer;}
.czz-pagination li:nth-of-type(1){border-radius: 4px;background-color: #ececec;border: solid 1px #ececec;width: 70px;}
.czz-pagination li:nth-of-type(7){border-radius: 4px;background-color: #ececec;border: solid 1px #ececec;width: 70px;}
.czz-pagination li:hover{background-color: #ffa540 !important;}
.czz-pagination li:hover a{color:#fff}