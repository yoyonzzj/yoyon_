body{background:rgb(244,244,244)}
.header{
	width:100%;
	height:2.6rem;
	background:rgb(255,151,27);
	color:#fff;
}
.header .left{
    float:left;
    padding-left:0.5rem;
    padding-top:0.4rem;
}
.header a{
	float:right;
	color:#fff;
	font-size:0.3rem;
	width:1.04rem;
	height:0.44rem;
	border:1px solid #fff;
	text-align: center;
	line-height:0.44rem;
	border-radius:0.04rem;
	margin-top:0.4rem;
	margin-right:0.5rem;
}
.header .left p{
	font-size:0.3rem;
	padding-bottom:0.3rem;
}
.header .left h3{
	font-size:0.72rem;
	font-weight:normal;
}
section{
	background:#fff;
	padding-left:0.35rem;
}
section p{
	height:1rem;
	line-height:1rem;
	padding-left:0.75rem;
	position:relative;
	border-bottom:1px solid rgb(236,236,236);
}
section a{
	font-size:0.3rem;
	color:rgb(102,102,102);
	display:block;
	width:100%;
}