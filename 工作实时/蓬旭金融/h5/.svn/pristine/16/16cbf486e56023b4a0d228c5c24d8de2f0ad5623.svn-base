section p{
	height:0.9rem;
	line-height:0.9rem;
	border-bottom:1px solid rgb(236,236,236);
	background:#fff;
	font-size:0.3rem;
	padding-left:0.3rem;
	position:relative;
}
section p span{
	float: left;
	width:1.5rem;
	color:rgb(102,102,102);
}
section p input{
	float:left;
	height:0.9rem;
	line-height:0.9rem;
	width:5rem;
	font-size:0.28rem;
}
section p .tar{
	text-align: right;
}
section p i{
    position: absolute;
    right: 0.3rem;
    top: 0.3rem;
    width: 0.14rem;
    height: 0.26rem;
    background: url(../img/arrow1.png) no-repeat;
    background-size: cover;
}
section p em{
	position: absolute;
    right: 0.3rem;
    top: 0.3rem;
    width: 0.34rem;
    height: 0.34rem;
    background: url(../img/add.png) no-repeat;
    background-size: cover;
}
textarea{
	background:#fff;
	resize:none;
	width:100%;
	height:1.8rem;
	display:block;
	font-size:0.28rem;
	padding:0.2rem 0.3rem;
	box-sizing:border-box;
}
.set{
	height:0.9rem;
	line-height:0.9rem;
	background:#fff;
	margin-top:0.2rem;
	color:rgb(102,102,102);
	padding-left:0.3rem;
}
#slidebox{
	float: right;
	width:1rem;
	height:0.6rem;
	border:1px solid #ccc;
	border-radius:0.5rem;
	position:relative;
	margin-right:0.3rem;
	margin-top:0.15rem;
}
#slidebox.active{
	background:rgb(255,151,27);
}
#left{
	float:left;
	width:0.5rem;
	height:0.6rem;
}
#right{
	float:right;
	width:0.5rem;
	height:0.6rem;
}
#slide{
	position:absolute;
	left:0rem;
	top:0rem;
	background:#fff;
	border-radius:0.3rem;
    box-shadow:0 0 0.1rem rgba(0,0,0,0.3);
	width:0.6rem;
	height:0.6rem;
}



















#footer a{
	position:fixed;
	left:0;
	bottom:0;
	height:0.88rem;
	width:100%;
	text-align: center;
	color:#fff;
	line-height: 0.88rem;
	font-size:0.36rem;
	background:rgb(255,151,27);
}