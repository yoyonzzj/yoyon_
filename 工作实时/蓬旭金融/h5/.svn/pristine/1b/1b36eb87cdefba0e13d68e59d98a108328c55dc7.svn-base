body{background:#fff;}
#box{
  text-align: center;
  color:#333;
  font-size:0.34rem;
  padding-top:2.7rem;
}
#box img{
  width:3.6rem;
}
#box p{
  line-height:1.7rem;
}





.footer{
  position:fixed;
  left:0;
  bottom:0;
  height:1.2rem;
  width:100%;
  background:#fff;
}
.footer a{
  float: left;
  width:33.33%;
  text-align: center;
  font-size:0.2rem;
  padding-top:0.2rem;
  color:rgb(102,102,102);
}
.footer a i{
  display:inline-block;
  width:0.44rem;
  height:0.4rem;
  margin-bottom:0.07rem;
}

.footer a:nth-of-type(1) i{
  background:url(../img/index_icon.png) no-repeat;
  background-size:cover;
}
.footer a:nth-of-type(1).active i{
  background:url(../img/index_icon_active.png) no-repeat;
  background-size:cover;
}
.footer a:nth-of-type(2) i{
  background:url(../img/fx_icon.png) no-repeat;
  background-size:cover;
}
.footer a:nth-of-type(3) i{
  background:url(../img/user_icon.png) no-repeat;
  background-size:cover;
}
.footer a:nth-of-type(3).active i{
  background:url(../img/user_icon_active.png) no-repeat;
  background-size:cover;
}
.footer a.active{
  color:rgb(241,156,63);
}