*{padding:0;margin:0;}
html,body{width:100%;font-family:"微软雅黑";}
li{list-style:none;}
#container{
	width:100%;
	height:2810px;
	min-width:1265px;
	background:url(../images/bg.png) no-repeat center top;
}
#container .content{
	width:1265px;
	margin:0 auto;
	padding-top:35px;
}
.content1{
    width:1100px;
    height:1039px;
    background:url(../images/content2.png) no-repeat;
    margin:-156px auto 0;
    position:relative;
}
.content1 ul{
	padding-top:145px;
}
.content1 li{
	width:824px;
	height:254px;
	margin:0 auto 30px;
}
.content1 li a{
    float: left;
    width: 254px;
    height: 86px;
    text-decoration: none;
    color: #fff;
    font-size: 20px;
    text-align: center;
    line-height: 78px;
    background: url(../images/btn.png) no-repeat;
    margin: 147px 0px 0px 224px;
}
.content1 li a:hover{
    background: url(../images/btn_hover.png) no-repeat;
}
.content1 li.li1{
	background:url(../images/1.png) no-repeat;
}
.content1 li.li2{
	background:url(../images/2.png) no-repeat;
}
.content1 li.li3{
	background:url(../images/3.png) no-repeat;
}
.content2{
    width:1100px;
    height:689px;
    background:url(../images/content1.png) no-repeat;
    margin:50px auto 0;
    padding-top:120px;
}
.content2 ul{
	width:815px;
	padding-left:60px;
	padding-bottom:25px;
}
.content2 li{
	font-size:18px;
	color:#d98cbc;
	margin-bottom:18px;
	line-height:30px;
}
.content2 p{
	font-size:18px;
	color:#be8cd9;
	padding-left:60px;
}
.footer{
	text-align:center;
	font-size:20px;
	color:#b6d2e7;
	padding-top:30px;
}