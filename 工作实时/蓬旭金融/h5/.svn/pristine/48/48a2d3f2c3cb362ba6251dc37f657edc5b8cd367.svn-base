li{list-style:none;}
.content{
	width:1200px;
	height:3191px;
	margin:0 auto;
	background:url(../images/content.png) no-repeat;
	font-size:18px;
	color:#d7b166;
	position:relative;
}
.content h4{
	font-weight:normal;
	font-size:22px;
	color:#f1be59;
}
.content li{
	position:absolute;
	left:705px;
}
.content li.left{
	position:absolute;
	left:0;
	width:484px;
}
.content li.left p{
	width:270px;
	text-align: right;
	padding-bottom:30px;
	padding-top:17px;
	line-height:30px;
}
.content li.left h4,.content li.left p,.content li.left img{
	float: right;
	clear: both;
	overflow: hidden;
}
