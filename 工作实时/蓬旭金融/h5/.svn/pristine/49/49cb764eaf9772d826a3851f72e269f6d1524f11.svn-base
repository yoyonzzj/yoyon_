body{background:rgb(244,244,244)}
.header{
	width:100%;
	height:2.6rem;
	background:rgb(255,151,27);
	color:#fff;
}
.header .left{
    float:left;
    padding-left:0.5rem;
    padding-top:0.4rem;
}
.header a{
	float:right;
	color:#fff;
	font-size:0.3rem;
	width:1.04rem;
	height:0.44rem;
	border:1px solid #fff;
	text-align: center;
	line-height:0.44rem;
	border-radius:0.1rem;
	margin-top:0.4rem;
	margin-right:0.5rem;
}
.header .left p{
	font-size:0.3rem;
	padding-bottom:0.3rem;
}
.header .left h3{
	font-size:0.72rem;
	font-weight:normal;
}
section{
	background:#fff;
	padding-left:0.35rem;
}
section p{
	height:1rem;
	position:relative;
	line-height:1rem;
	padding-left:0.75rem;
	position:relative;
	border-bottom:1px solid rgb(236,236,236);
}
section p span{
	position:absolute;
	width:0.4rem;
	height:0.4rem;
}
section p:nth-of-type(1) span{
    background:url(../img/chongzhi.png) no-repeat;
    background-size:cover;
    left:0.1rem;
    top:0.27rem;
}
section p:nth-of-type(2) span{
    background:url(../img/tixian.png) no-repeat;
    background-size:cover;
    left:0.1rem;
    top:0.27rem;
}
section p:nth-of-type(3) span{
    background:url(../img/bankcard.png) no-repeat;
    background-size:cover;
    left:0.1rem;
    top:0.27rem;
}
section a{
	font-size:0.3rem;
	color:rgb(102,102,102);
	display:block;
	width:100%;
	position:relative;
}
section a i{
	position:absolute;
	width:0.14rem;
	height:0.26rem;
	background:url(../img/arrow1.png) no-repeat;
	background-size:cover;
	right:0.3rem;
	top:0.4rem;
}