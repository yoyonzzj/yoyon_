body{background:#fff;}
.line{height:0.2rem;background:#f4f4f4;}
.form {
	width:6.9rem;
	display:block;
	margin:0 auto;
	
}
.form p{
	height:0.9rem;
	line-height:0.9rem;
	border-bottom:1px solid #ccc;
	position:relative;
	padding-left:0.6rem;
}
.form p i{
	position:absolute;
	left:0;
	top:0.2rem;
	width:0.4rem;
	height:0.4rem;
	background:url(../img/pwd.png) no-repeat;
	background-size:cover;
}
.form p.focus{
	border-bottom:1px solid #ff971b;
}
.form p input{
	display:block;
	height:0.5rem;
	line-height:0.5rem;
	width:4rem;
	font-size:0.26rem;
	padding:0.2rem 0;
}
.form p em{
	position:absolute;
	right:0.1rem;
	top:0.3rem;
	width:0.3rem;
	height:0.3rem;
	background:url(../img/del1.png) no-repeat;
	background-size:cover;
	display:none;
}
.form p:nth-of-type(1) em{
	right:0.85rem;
}
.form p span{
	position:absolute;
	right:0.05rem;
	top:0.25rem;
	width:0.4rem;
	height:0.4rem;
	background:url(../img/biyan.png) no-repeat;
	background-size:cover;
}
.form p span.cur{
   background:url(../img/zhengyan.png) no-repeat;
	background-size:cover;
}
