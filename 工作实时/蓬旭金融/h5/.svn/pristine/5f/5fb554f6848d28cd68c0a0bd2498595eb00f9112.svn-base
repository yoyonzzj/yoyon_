body{background:rgb(244,244,244);font-size:0.28rem;}
dl{
  background:#fff;
  height:2.15rem;
  padding:0.4rem 0 0 1.44rem;
  box-sizing:border-box;
  border-top:1px solid rgb(236,236,236);
}
dt{
	float:left;
	width:1.3rem;
	height:1.3rem;
	background:#ccc;
}
dt img{
	width:1.3rem;
	height:1.3rem;
}
dd{
	float:left;
	padding-left:0.3rem;
	padding-top:0.2rem;
}
dd h4{
	font-weight:normal;
	padding-bottom:0.25rem;
}
dd span{
	color:rgb(255,151,27);
}
.btn{
	display:block;
	width:6rem;
	height:0.88rem;
	line-height:0.88rem;
	text-align:center;
	color:#fff;
	background:rgb(255,151,27);
	margin:1.2rem auto 1rem;
	font-size:0.34rem;
	border-radius:0.1rem;
}
.tip{
	text-align:center;
	color:rgb(250,92,49);
}
#mask{
	position:fixed;
	left:0;
	top:0;
	width:100%;
    height:100%;
    background:rgba(0,0,0,0.4);
    display:none;
}
#dialog{
	position:fixed;
	left:50%;
	top:50%;
	margin-left:-2.73rem;
	margin-top:-1.62rem;
	border-radius:0.1rem;
	width:5.46rem;
	height:3.24rem;
	background:#fff;
	display:none;
}
#dialog h4{
	text-align: center;
	font-weight:normal;
	font-size:0.32rem;
	padding-top:1.2rem;
	color:rgb(51,51,51);
}
.btns{
	width:5rem;
	margin:0.85rem auto 0;
	padding-top:0.20rem;
	overflow: hidden;
	border-top:1px solid rgb(236,236,236);
}
.btns span{
	float: left;
	width:50%;
	font-size:0.32rem;
	text-align: center;
	height:0.34rem;
	line-height:0.34rem;
	color:rgb(153,153,153);
	
}
.btns span.orange{
	color:rgb(241,156,63);
}
.btns span:nth-of-type(1){
  border-right:1px solid rgb(220,220,220);
  box-sizing:border-box;
}