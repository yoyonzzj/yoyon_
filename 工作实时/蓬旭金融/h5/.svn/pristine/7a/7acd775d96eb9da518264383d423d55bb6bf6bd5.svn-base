body{background:rgb(244,244,244)}
.header{
	height:3rem;
	background:url(../img/userbg.png) no-repeat;
	background-size:cover;
	position:relative;
}
.header dl{
	padding:0.96rem 0 0 0.5rem;
}
.header dl dt{
	float: left;
	width: 1.1rem;
	height:1.1rem;
	border-radius:50%;
	background:#fff;
}
.header dl dd{
	float: left;
	padding-left:0.35rem;
	font-size:0.32rem;
	line-height:1.1rem;
	color:#fff;
}
.header a{
	position:absolute;
	width:0.46rem;
	height:0.44rem;
	background:url(../img/set.png) no-repeat;
	background-size:cover;
	top:0.26rem;
	right:0.40rem;
}
section{
	padding-left:0.3rem;
	background:#fff;
}
section p{
	height:1rem;
	line-height:1rem;
	font-size:0.3rem;
	padding-left:0.75rem;
	border-bottom:1px solid rgb(236,236,236);
    position:relative;
}
section p span{
	position:absolute;
	left:0rem;
	top:0.25rem;
	width:0.46rem;
	height:0.46rem;
}
section p:nth-of-type(1) span{
   background:url(../img/yue.png) no-repeat;
   background-size:cover;
}

section p:nth-of-type(2) span{
   background:url(../img/jilu.png) no-repeat;
   background-size:cover;
}
section p:nth-of-type(3) span{
   background:url(../img/yhq.png) no-repeat;
   background-size:cover;
}
section p:nth-of-type(4) span{
   background:url(../img/pos.png) no-repeat;
   background-size:cover;
}
section p a{
	display:block;
	width:100%;
	color:rgb(102,102,102);
	position:relative;
}
section p a i{
    position:absolute;
    width:0.14rem;
    height:0.26rem;
    background:url(../img/arrow1.png) no-repeat;
    background-size:cover;
    right:0.3rem;
    top:0.35rem;
}
section p a strong{
	float: right;
	color:rgb(250,92,49);
	font-weight:normal;
	font-size:0.3rem;
	margin-right:0.75rem;
}

.footer{
	position:fixed;
	left:0;
	bottom:0;
	height:1.2rem;
	width:100%;
	background:#fff;
}
.footer a{
	float: left;
	width:33.33%;
	text-align: center;
	font-size:0.2rem;
	padding-top:0.2rem;
	color:rgb(102,102,102);
}
.footer a i{
	display:inline-block;
	width:0.44rem;
	height:0.4rem;
	margin-bottom:0.07rem;
}

.footer a:nth-of-type(1) i{
	background:url(../img/index_icon.png) no-repeat;
	background-size:cover;
}
.footer a:nth-of-type(2) i{
	background:url(../img/fx_icon.png) no-repeat;
	background-size:cover;
}
.footer a:nth-of-type(3) i{
	background:url(../img/user_icon.png) no-repeat;
	background-size:cover;
}
.footer a:nth-of-type(3).active i{
	background:url(../img/user_icon_active.png) no-repeat;
	background-size:cover;
}
.footer a.active{
	color:rgb(241,156,63);
}