*{margin:0;padding:0;}
body{font-family:"微软雅黑";font-size:0.28rem;background:#f2a868;}
input{outline:none;border:none;-webkit-appearance:none;appearance:none;}
.banner img{width:100%;}
.step img{
	display:block;
	width:6.74rem;
	margin:0 auto;
}
.form{
	width:6.3rem;
	margin:0 auto;
	padding-top:0.4rem;
}
.form p{
	width:6.3rem;
	height:0.84rem;
	line-height:0.84rem;
	margin-bottom:0.3rem;
	background:#fff;
	border-radius:0.08rem;
	overflow: hidden;
	position:relative;
}
.form  p span{
	float:left;
	width:0.8rem;
	height:0.84rem;
	background:#f6f6f6;
	position:relative;
}
.form  p .txt{
	float:left;
	width:5rem;
	height:0.44rem;
	line-height:0.44rem;
	padding:0.2rem 0;
	font-size:0.28rem;
	padding-left:0.3rem;
}
#send{
	position:absolute;
	right:0.24rem;
	top:0.1rem;
	width:1.4rem;
	height:0.62rem;
	border:1px solid #edb959;
	background:none;
	border-radius:0.02rem;
	color:#edb959;
	font-size:0.3rem;
}
.form  p:nth-of-type(1) span i{
	position:absolute;
	top:0.24rem;
	left:0.27rem;
	width:0.28rem;
	height:0.4rem;
	background:url(../images/tel.png) no-repeat;
	background-size:cover;
}
.form  p:nth-of-type(2) span i{
	position:absolute;
	top:0.24rem;
	left:0.27rem;
	width:0.28rem;
	height:0.38rem;
	background:url(../images/pwd.png) no-repeat;
	background-size:cover;
}
.form  p:nth-of-type(3) span i{
	position:absolute;
	top:0.26rem;
	left:0.25rem;
	width:0.36rem;
	height:0.27rem;
	background:url(../images/msg.png) no-repeat;
	background-size:cover;
}
.reg{
	display:block;
	margin:0.5rem auto 0;
	font-size:0.34rem;
	color:#fff;
	text-decoration:none;
	text-align: center;
	width:6.48rem;
	height:0.99rem;
	line-height:0.79rem;
	background:url(../images/btn.png) no-repeat;
	background-size:cover;
}